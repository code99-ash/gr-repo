  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "nest start --watch -e 'node -r dotenv/config -r source-map-support/register'",
    "start:debug": "nest start --debug --watch",
    "start:prod": "npx drizzle-kit migrate && node -r dotenv/config dist/src/core/main.js",
    "start:worker:dev": "nest start --config nest-cli-worker.json --watch -e 'node -r dotenv/config -r source-map-support/register'",
    "start:worker:debug": "nest start --debug nest-cli-worker.json --watch",
    "start:worker:prod": "node -r dotenv/config dist/src/worker/main.js",
    "db:studio": "drizzle-kit studio",
    "db:pull": "drizzle-kit pull",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@anatine/zod-nestjs": "^2.0.9",
